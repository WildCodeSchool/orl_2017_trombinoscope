{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <h1>WCS Trombinoscope</h1>


    <div class="row">
        <div class="col-sm-12">
            {{ form_start(form) }}
            {{ form_row(form.input) }}

            <ul id="trombi_search_autocomplete"></ul>

            {{ form_row(form.category) }}
            <input type="submit" class="btn btn-primary" value="GO"/>
            {{ form_end(form) }}
        </div>
    </div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
        </tr>
        </thead>
        <tbody>
        {% for wilder in wilders %}
        <tr>
            <td>{{ wilder.firstname }}</td>
            <td>{{ wilder.lastname }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/autocompleteWilder.js') }}"></script>

{% endblock %}
